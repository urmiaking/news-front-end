@model NewsGroup

@{
    ViewData["Title"] = "ایجاد دسته بندی ایجاد";
}

<section class="category-section border-radius">
    <header><i class="fa fa-plus-square-o"></i> <h3> @ViewData["Title"] </h3></header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <br/>
                    <div class="form-group">
                        <label asp-for="GroupTitle" class="control-label"></label>
                        <input asp-for="GroupTitle" class="form-control"/>
                        <span asp-validation-for="GroupTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="ذخیره" class="btn btn-block btn-success"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


<div class="text-center">
    <a asp-area="" asp-controller="Home" asp-action="Index">بازگشت به صفحه اصلی</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
