@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "فراموشی رمز عبور";
}


<section class="category-section border-radius">
    <header><i class="fa fa-lock"></i> <h3> فراموشی رمز عبور </h3></header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="ForgetPassword">
                    <br />
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="ارسال ایمیل بازیابی رمز عبور" class="btn btn-block btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<div class="text-center">
    <a asp-controller="Home" asp-action="Index">بازگشت به صفحه اصلی</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
