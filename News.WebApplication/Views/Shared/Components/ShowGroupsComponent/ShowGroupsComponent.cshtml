@model List<ShowGroupsViewModel>

<section class="category-section border-radius">
    <header><i class="fa fa-folder-open-o"></i> <h3> دسته بندی ها </h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <a asp-controller="News"
                   asp-action="ShowNewsByGroupId"
                   asp-route-groupId="@item.GroupId"
                   asp-route-title="@item.GroupTitle">
                    @item.GroupTitle
                    <span>@item.NewsCount</span>
                </a>
            </li>
        }
    </ul>
</section>