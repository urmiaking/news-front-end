@model IEnumerable<News>

<section class="last-news-side border-radius">
    <header><i class="icons icon-star"></i> <h3> پربازدیدترین اخبار </h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/img/news-images/@item.ImageName">
                <h2> <a style="display: inherit;" asp-controller="News" asp-action="ShowNews" asp-route-newsId="@item.Id">@item.Title</a></h2>
                <span>انتشار : @item.CreateDate.ToPersianDateString()</span>
            </li>
        }
    </ul>
</section>